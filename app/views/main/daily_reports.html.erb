<div class="row">
	<div class="col-lg-10 offset-lg-1">
		<%= link_to "Volver", '/reports' %>
		<strong>El número de registros durante el periódo es <%= @number_of_records %></strong><br><br>
		<% if !@most_records_hour.nil? %>
			<strong>La hora con más ingresos fue <%= @most_records_hour + ":00"%></strong><br><br>
		<% end %>
		<div class="table-responsive">
			<table class="table table-hover table-stripped">
				<thead>
					<tr>
						<th>Sensor que registro el ingreso</th>
						<th>Fecha</th>
						<th>Hora</th>
						<th>Tienda</th>
					</tr>
				</thead>
				<tbody>
					<% @records.each do |record| %>
						<tr>
							<td><%= record.sensor.serial_number %></td>
							<td><%= record.counter_date %></td>
							<td><%= record.counter_time.gsub(',',':') %></td>
							<td><%= record.store.name %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>