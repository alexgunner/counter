<%= form_with(model: sensor, local: true) do |form| %>
  <% if sensor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sensor.errors.count, "error") %> prohibited this sensor from being saved:</h2>

      <ul>
      <% sensor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Numero de serie" %>
    <%= form.text_field :serial_number, id: :sensor_serial_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Marca" %>
    <%= form.text_field :brand, id: :sensor_brand, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Estado" %>
    <%= form.number_field :status, id: :sensor_status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Fecha de instalacion" %>
    <%= form.date_select :installation_date, id: :sensor_installation_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Tienda" %>
    <%= form.collection_select :store_id, Store.all, :id, :name, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Aceptar", class: "btn btn-success" %>
    <%= link_to "Cancelar", sensors_url, class: "btn btn-danger" %>
  </div>
<% end %>
