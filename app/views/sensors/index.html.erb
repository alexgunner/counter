<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>

    <h1 class="main-title">Sensores</h1>
    
    <%= link_to 'Agregar Sensor', new_sensor_path %>
    
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Numero serialr</th>
            <th>Marca</th>
            <th>Estado</th>
            <th>Fecha de instalacion</th>
            <th>Tienda</th>
            <th colspan="3">Opciones</th>
          </tr>
        </thead>
      
        <tbody>
          <% @sensors.each do |sensor| %>
            <tr>
              <td><%= sensor.serial_number %></td>
              <td><%= sensor.brand %></td>
              <td><%= sensor.sensor_status %></td>
              <td><%= sensor.installation_date %></td>
              <td><%= sensor.store.name %></td>
              <td><%= link_to 'Editar', edit_sensor_path(sensor) %></td>
              <td><%= link_to 'Eliminar', sensor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>  
  </div>
</div>